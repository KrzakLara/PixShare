@model List<PixShareLIB.Models.IPost>

@{
    ViewBag.Title = "Index";
    bool isAdmin = false;

    if (Session["UserType"] != null && Session["UserType"].ToString() == "Admin")
    {
        isAdmin = true;
    }
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #FFB6C1;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #555;
                }

        body {
            background-color: #FFFFFF;
            color: white;
            margin: 0;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        .photos {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .photo {
            margin: 10px;
            border: 1px solid #ccc;
            padding: 10px;
            background-color: #fff;
            color: black;
            position: relative;
            width: 200px;
            height: auto;
            box-sizing: border-box;
        }

            .photo img {
                width: 100%;
                height: 180px;
                display: block;
                margin: 0 auto;
                border-radius: 5px;
                margin-bottom: 10px;
            }

        .upload-button {
            display: block;
            width: 200px;
            margin: 50px auto;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }

            .upload-button:hover {
                background-color: #45a049;
            }

        .edit-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #FF69B4;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .edit-button:hover {
                background-color: #FF1493;
            }

        .delete-button {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-color: #FF69B4;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .delete-button:hover {
                background-color: #FF1493;
            }

        .download-button {
            display: block;
            margin: 10px auto;
            background-color: #FF69B4;
            color: white;
            padding: 5px 0;
            width: 80%;
            text-align: center;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .download-button:hover {
                background-color: #FF1493;
            }

        .photo p {
            font-size: 14px;
            line-height: 1.4;
            color: #333;
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <img src="~/Assets/PicShare3.png" alt="PixShare Logo" />
        <h1>PixShare</h1>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("Search", "Home")">Search</a>
        <a href="@Url.Action("PackageConsumption", "Home")">Package consumption</a>
        <a href="@Url.Action("Logout", "Home")">Logout</a>
        @if (isAdmin)
        {
            <a href="@Url.Action("Users", "Admin")">Users</a>
            <a href="@Url.Action("ManageImages", "Admin")">Manage images</a>
        }
    </div>
    <a href="@Url.Action("UploadPost", "Home")" class="upload-button">Upload Post</a>
    <div class="content">
        <div class="photos">
            @foreach (var post in Model)
            {
                <div class="photo">
                    @if (!string.IsNullOrEmpty(post.ThumbnailPath))
                    {
                        <a href="@Url.Action("ShowPhoto", "Home", new { id = post.IDPost })">
                            <img src="@post.ThumbnailPath" alt="Thumbnail">
                        </a>
                    }
                    else if (!string.IsNullOrEmpty(post.ImagePath))
                    {
                        <a href="@Url.Action("ShowPhoto", "Home", new { id = post.IDPost })">
                            <img src="@post.ImagePath" alt="Photo">
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("ShowPhoto", "Home", new { id = post.IDPost })">
                            <img src="~/Assets/placeholder.png" alt="Placeholder Image">
                        </a>
                    }

                    <a href="@Url.Action("EditPost", new { id = post.IDPost })" class="edit-button">Edit</a>
                    <a href="@Url.Action("DownloadPhoto", new { id = post.IDPost })" class="download-button">Download</a>
                    @if (isAdmin)
                    {
                        <a href="@Url.Action("DeletePostIndex", new { id = post.IDPost })" class="delete-button">Delete</a>
                    }
                    <p>@post.Description</p>
                    <p>Author: @post.Username</p>
                    <p>Upload Date: @post.Date.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    <p>@post.Hashtags</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
